@model BuilderingApp.Models.Photo

@{
    ViewBag.Title = "DeletePhoto";
}

@if (Model != null)
{
    <h2>Delete Photo</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>

        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Title)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Title)
            </dd>

            <dt></dt>
            <dd>

                <img src="@Url.Content("~/ImageFolder/" + Model.Name)" alt="File not found" height="500" width="500" />

            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @*videoId passed to controller post action*@
            <input class="form-control text-box single-line valid" id="photoId" name="photoId" type="hidden" value="@Model.PhotoId" aria-invalid="false">
            @*videoId passed to controller post action*@
            <input class="form-control text-box single-line valid" id="routeId" name="routeId" type="hidden" value="@Model.RouteId" aria-invalid="false">

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" />

            </div>
        }
    </div>
}
@if (Model == null)
{
<div>
    <br />
    <br />
    <br />
    @ViewBag.errorMsg
    @Html.ActionLink("Return to route", "GetRoute", "Route", new { id = ViewBag.ID }, null)
</div>
}
